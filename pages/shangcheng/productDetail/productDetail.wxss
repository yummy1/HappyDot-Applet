.detailContainer{
  display: flex;
  flex-direction: column;
  position: relative
}
/* 顶部基本信息 */
.info{
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: white
}
.pic{
  width: 100%;
  height: 640rpx;
}
.pic image{
  width: 100%;
  height: 640rpx;
}
.name{
  color: #333;
  font-size: 32rpx;
  font-weight: 400;
  margin: 20rpx 32rpx 0rpx;
}
.price{
  color: #E6475E;
  font-size: 42rpx;
  margin:16rpx 32rpx 0rpx;
}
.jifen{
  color: #F7A429;
  font-size: 30rpx;
  font-weight: 300;
  margin:16rpx auto 16rpx 32rpx;
  padding: 4rpx 6rpx;
  border: 2rpx solid #F7A429;
}
/* 规格 */
.guige{
  width: 100%;
  height: 100rpx;
  background-color: white;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.guige_left{
  display: flex;
  flex-direction: row;
}
.guige text{
  color: #333;
  font-size: 30rpx;
  font-weight: 300;
  line-height: 100rpx;
}
.guige_selected{
  margin-left: 20rpx;
}
/* 评价 */
.pingjia{
  width: 100%;
  height: 100rpx;
  text-align: center;
  background-color: white;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.pingjia_left{
  display: flex;
  flex-direction: row;
}
.pingjia text{
  color: #333;
  font-size: 30rpx;
  font-weight: 300;
  line-height: 100rpx;
}
.line{
  height: 100%;
  width: 4rpx;
  background-color: #F7A429;
  margin-right: 16rpx;
}
.pingfen{
  margin-left: 20rpx;
}
/* 商家 */
.shangjia{
  width: 100%;
  height: 160rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 20rpx;
}
.shangjia_left{
  display: flex;
  flex-direction: row;
  align-content: center;
  height: 160rpx;
}
.shangjia_left image{
  width: 100rpx;
  height: 100rpx;
  margin: 30rpx 20rpx;
}
.shangjia text{
  color: #333;
  font-size: 32rpx;
  font-weight: 300;
  line-height: 160rpx;
}
/* 详情 */
.details{
  margin-top: 20rpx;
  margin-bottom: 140rpx;
}
.details_top{
  width: 100%;
  height: 100rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
}
.details_top text{
  font-size: 30rpx;
  font-weight: 300;
  line-height: 94rpx;
  text-align: center;
}
.details_top view{
  width: 33%;
  text-align: center;
}
.BGyellow{
  background-color: #F7A429;
}
.BGwhite{
  background-color: white;
}
.yellow{
  color: #F7A429;
}
.gray{
  color: #333;
}
.details_top view view{
  width: 100%;
  height: 6rpx;
}
/* 底部 */
.bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 140rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
}
.bottom image{
  width: 50rpx;
  height: 50rpx;
}
.zixun{
  display: flex;
  flex-direction: column;
  width: 20%;
  color: #333;
  justify-content: center;
  font-size: 30rpx;
  text-align: center
}
.zixun image{
  margin: 0 auto 10rpx;
}
.cart{
  display: flex;
  flex-direction: column;
  width: 20%;
  color: #333;
  justify-content: center;
  font-size: 30rpx;
  text-align: center
}
.cart image{
  margin: 0 auto 10rpx;
}
.cartBtn{
  width: 30%;
  background-color: #F7A429;
  text-align: center;
  line-height: 140rpx;
  color: white;
  font-size: 34rpx;
}
.buyBtn{
  width: 30%;
  background-color: #E6475E;
  text-align: center;
  line-height: 140rpx;
  color: white;
  font-size: 34rpx;
}
/* 规格选择 */
.guige_xuanze_show{
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
}
.guige_xuanze_hidden{
  display: none;
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
}
.xuanze_info{
  width: 100%;
  /* height: 528rpx; */
  background-color: white;
  display: flex;
  flex-direction: column;
  position: fixed;
  bottom: 140rpx;
}
.xuanze_productInfo{
  width: 100%;
  height: 220rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #eee;
  position: relative;
}
.xuanze_productInfo image{
  margin: 30rpx;
  width: 160rpx;
  height: 160rpx;
}
.xuanze_infoRight{
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}
.xuanze_name{
  font-size: 32rpx;
  color: #333;
}
.xuanze_price{
  font-size: 32rpx;
  color: #E6475E;
}
.xuanze_selected{
  font-size: 30rpx;
  color: #666;
}
.xuanze_close{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  font-size: 30rpx;
}
.xuanze_color,.xuanze_size{
  margin:30rpx 30rpx 0;
  color: #333;
  font-size: 32rpx;
}
.xuanze_colors, .xuanze_specs{
  margin-top: 20rpx;
}
.colorItem, .specsItem{
  width: 280rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 8rpx;
  border: 1rpx solid #999;
  text-align: center;
}
.colorItemSelected, .specsItemSelected{
  width: 280rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 8rpx;
  border: 1rpx solid #F7A429;
  text-align: center;
  color: #F7A429;
}
.xuanze_count{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
  margin: 20rpx 30rpx;
}
.xuanze_countRight{
  display: flex;
  flex-direction: row;
  align-content: center;
}
.xuanze_countNum{
  margin: 0 20rpx;
}
.jian,.jia{
  width: 80rpx;
  height: 80rpx;
}
.xuanze_bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 140rpx;
}
.xuanze_cartBtn{
  width: 50%;
  height: 100%;
  background-color: #F7A429;
  text-align: center;
  line-height: 140rpx;
  color: white;
  font-size: 34rpx;
  display: inline-block;
}
.xuanze_buyBtn{
  width: 50%;
  height: 100%;
  background-color: #E6475E;
  text-align: center;
  line-height: 140rpx;
  color: white;
  font-size: 34rpx;
  display: inline-block;
}