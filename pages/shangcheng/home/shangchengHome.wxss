@import "/template/product";
.container{
  display: flex;
  flex-direction: column;
  background-color: #F1F1F1;
  padding: 0;
}
/* 顶部 */
.top{
  background-color: white;
  width: 100%;
  height: 420rpx;
}
.fenlei{
  float: left;
  width: 180rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  margin-left: 6rpx;
}
.fenlei image{
  width: 100rpx;
  height: 100rpx;
  margin: 30rpx 40rpx 20rpx 40rpx;
  border-radius: 50rpx;
}
.fenlei text{
  text-align: center;
  color: #666;
  font-size: 32rpx;
}
/* 中部 */
.center{
  width: 100%;
  height: 160rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 24rpx;
}
.center view{
  display: flex;
  flex-direction: row;
}
.center image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin: 20rpx;
}
.center text{
  color: #666;
  line-height: 160rpx;
}
.center_fujin{
  font-weight: 300;
  margin-right: 20rpx;
  font-size: 34rpx;
}
/* 商品 */
.bottom_header{
  height: 90rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.bottom_header text{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #333;
  font-weight: 200;
  font-size: 36rpx;
}
.product{
  float: left;
  width: 100%;
}