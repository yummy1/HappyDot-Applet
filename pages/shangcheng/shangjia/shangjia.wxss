.shangjiaContainer{
  display: flex;
  flex-direction: column;
  background-color: #F1F1F1;
}
/* 顶部 */
.top{
  background-color: white;
  width: 100%;
  height: 420rpx;
}
.fenlei{
  float: left;
  width: 180rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  margin-left: 52rpx;
}
.fenlei image{
  width: 100rpx;
  height: 100rpx;
  margin: 30rpx 40rpx 20rpx 40rpx;
  border-radius: 50rpx;
}
.fenlei text{
  text-align: center;
  color: #666;
  font-size: 32rpx;
}
/* 下部 */
.bottom_header{
  height: 90rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.bottom_header text{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #333;
  font-weight: 200;
  font-size: 34rpx;
}
.fenlei2{
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
  margin-bottom: 20rpx;
}
.fenlei2_title{
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  color: #666;
  width: 100%;
}
.fenlei2_one{
  width: 220rpx;
  height: 220rpx;
  background-color: red;
  float: left;
  margin-left: 22rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.fenlei2_one image{
  width: 100%;
  height: 100%;
}
.fenlei2_list{
  width: 100%;
}
.fenlei2_name{
  position: absolute;
  top: 80rpx;
  width: 220rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: rgba(255, 255, 255, 0.5);
  text-align: center;
  color: black;
  font-size: 30rpx;
  font-weight: 300;
}