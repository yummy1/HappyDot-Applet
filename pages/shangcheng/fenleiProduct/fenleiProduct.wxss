@import "/template/product";
.fenleiContainer{
  display: flex;
  flex-direction: column;
  height: 100%;
}
/* 条件 */
.conditions{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  background-color: white;
}
.conditions text{
  width: 33%;
  line-height: 100rpx;
  text-align: center;
}
.price{
  width: 33%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.price image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 32rpx;
}
.yellow{
  color: #F7A429;
}
.gray{
  color: #333;
}
.product{
  background-color: #F1F1F1;
  height: 100%;
}