.courseListContainer{
  display: flex;
  flex-direction: column;
}
.course{
  margin-top: 2rpx;
  background-color: white;
  width: 100%;
  height: 240rpx;
  display: flex;
  flex-direction: row;
}
.course image{
  width: 250rpx;
  height: 200rpx;
  margin: 20rpx 30rpx;
  background-color: paleturquoise
}
.courseRight{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0;
  position: relative;
}
.name{
  color: #333;
  font-size: 34rpx;
}
.score{
  color: #999;
  font-size: 30rpx;
  position: absolute;
  bottom: 0;
}