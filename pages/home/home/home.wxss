@import "/template/product";
.homeContainer{
  display: flex;
  flex-direction: column;
  background-color: #F1F1F1;
  position: relative;
}
.ad{
  width: 100%;
  height: 500rpx;
}
.ad image{
  width: 100%;
  height: 100%;
}
/* 头部 */
.nav{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}
.hujiu{
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
  background-color: #F14864;
  color: white;
  text-align: center;
  border-radius: 30rpx;
  font-size: 28rpx
}
.signin{
  width: 100rpx;
  height: 60rpx;
  align-content: center;
  margin-top: 10rpx;
  background-color: skyblue;
}
/* 模块 */
.module{
  margin-top: -50rpx;
  z-index: 100;
  height: 400rpx;
  width: 94%;
  margin-left: 3%;
  display: flex;
  flex-direction: column;
  border-radius: 16rpx;
  overflow: hidden;
}
.module_top{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 199rpx;
  overflow: hidden;
}
.module_bootom{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 199rpx;
  margin-top: 2rpx;
  overflow: hidden;
}
.module_shangcheng{
  background-color: #F14864;
  width: 50%;
  height: 100%;
  margin-right: 2rpx;
  text-align: center;
  color: white;
  padding-top: 80rpx;
}
.module_jifen{
  background-color: #F8A127;
  width: 50%;
  height: 100%;
  text-align: center;
  color: white;
  padding-top: 80rpx;
}
.module_tuan{
  background-color: #1BA2E6;
  width: 50%;
  height: 100%;
  margin-right: 2rpx;
  text-align: center;
  color: white;
  padding-top: 80rpx;
}
.module_xuexike{
  background-color: #9BCB40;
  width: 50%;
  height: 100%;
  text-align: center;
  color: white;
  top: 80rpx; 
  padding-top: 80rpx;
}
/* 消息 */
.message_list{
  display: flex;
  flex-direction: column;
  background-color: white;
  margin-top: 20rpx;
}
.message_header{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 110rpx;
}
.msgHeader_tittle{
  color: white;
  background-color: #FDA428;
  width: 180rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.msgHeader_more{
  color: #999;
  line-height: 110rpx;
  right: 20rpx;
  margin-left: 20rpx;
  font-weight: 200;
  font-size: 32rpx;
}
.msgHeader_line{
  background-color:#eee;
  height: 2rpx; 
  width: 55%;
  margin-top: 54rpx;
}
.message{
  margin: 10rpx 20rpx;
  position: relative;
  border-bottom: 2rpx solid #eee;
  height: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.message_content{
  color: #333;
  font-size: 32rpx;
}
.message_date{
  color: #999;
  font-size: 28rpx;
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
}
/* 商品 */
.product_header{
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 100rpx;
}
.product{
  float: left;
}