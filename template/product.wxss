.product_one{
  margin-top: 20rpx;
  margin-left: 18rpx;
  background-color: white;
  float: left;
  width: 348rpx;
  height: 550rpx;
  position: relative;
  border-radius: 4rpx;
  box-shadow: 0rpx 2rpx 3rpx 3rpx #ddd; 
}
.product_icon{
  width: 348rpx;
  height: 348rpx;
}
.product_tittle{
  font-size: 32rpx;
  margin: 20rpx 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.product_price{
  color: #F14864;
  font-size: 36rpx;
  margin-left: 20rpx;
  position: absolute;
  bottom: 20rpx;
}